            ++buyCount;
            if ($('#CartAmountReduce').hasClass('cant_add')) {
                $('#CartAmountReduce').removeClass('cant_add')
            }
            if (buyCount >= stock) {
                buyCount = stock;
                if (!$(this).hasClass('cant_add')) {
                    $(this).addClass('cant_add');
                }
            } else if (buyCount < minSoldNum) {
