            var buyCount = parseInt($('#ProAmount').val());
            var minSoldNum = parseInt($('#C_MinSoldNum').val());
            var stock = parseInt($('#C_Stock').val());
            --buyCount;
            if (buyCount <= minSoldNum) {
                buyCount = minSoldNum;
                if (!$(this).hasClass('cant_add')) {
