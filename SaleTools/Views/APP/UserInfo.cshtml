@using Model;
@{
    Layout = null;
}
@model UserInfo
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>UserInfo</title>
    <style>
        .tittle {
            height: 40px;
            line-height: 40px;
            background-color: #f2f2f2;
            width: 100%;
            position: fixed;
            z-index: 99;
            bottom: 0px;
            top: 30px;
        }

        .return {
            position: absolute;
            left: 10px;
            top: 5px;
        }

        .infoRow {
            font-size: 14px;
            width: 100%;
            height: 25px;
            line-height: 25px;
            padding-left: 20px;
        }

        .orderInfo {
            margin-top: 50px;
            border-bottom: 1px solid #bbbbbb;
        }

        .leftLabel {
            float: left;
            color: black;
        }

        .info {
            float: left;
            color: #bbbbbb;
        }

        #goodList {
            width: 100%;
        }

        .goodsItem {
            width: 100%;
            height: 100px;
            border-bottom: 1px #f2f2f2 solid;
            margin-top: 10px;
            color: #bbbbbb;
        }

        .goodsimg {
            float: left;
            width: 30%;
            height: 100px;
            text-align: center;
        }

        .goodsInfo {
            float: left;
            width: 70%;
            height: 100px;
            text-align: left;
            line-height: 20px;
        }

        .price {
            margin-top: 15px;
        }

        .orderInfoRow {
            line-height: 40px;
            font-size: 14px;
            height: 40px;
            border-bottom: 1px #f2f2f2 solid;
        }

        .leftTittle {
            float: left;
            margin-left: 20px;
        }

        .RightValue {
            float: right;
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <div id="App">
        <div class="orderInfo">
            <div class="infoRow"><div class="leftLabel">用户姓名：</div><div class="info" id="UserName">@Model.UserName</div></div>
            <div class="infoRow"><div class="leftLabel">小店编号：</div><div class="info" id="UserNum">@Model.UserNum</div></div>
            <div class="infoRow"><div class="leftLabel">收货姓名：</div><div class="info" id="ReceiveName">@Model.ReceiveName</div></div>
            <div class="infoRow"><div class="leftLabel">联系方式：</div><div class="info" id="Tel">@Model.Tel</div></div>
            <div class="infoRow"><div class="leftLabel">所在区域：</div><div class="info" id="Areas">@Model.Area</div></div>
            <div class="infoRow"><div class="leftLabel">收货地址：</div><div class="info" id="Addr">@Model.Addr</div></div>
            <div class="infoRow"><div class="leftLabel">客户类型：</div><div class="info" id="TypeName">@Model.TypeName</div></div>
        </div>
        <button v-on:click="logOut">退出登录</button>
    </div>
    <script src="~/Scripts/Vue/vue.min.js"></script>
    <script src="~/Scripts/Vue/vue-resource.js"></script>
    <script>
        var app = new Vue({
            el: "#App",
            
            methods: {
                logOut: function () {
                    if (confirm("确认要退出该账号吗？")) {
                        this.$http.post('/APP/LogOut', {  }, { emulateJSON: true }).then(function (res) {
                            var res = JSON.parse(res.body);
                            if (res.Stutas) {
                                location.href ="/APP/WebLogin";
                            }
                            else {
                                alert(res.Msg);
                            }
                        }, function (res) {
                            console.log(res.status);
                        });
                    }

                }

            },
        })

    </script>
</body>
</html>
