
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <style>
        .goodsItem {
            width: 100%;
            height: 100px;
            border-bottom: 1px #f2f2f2 solid;
            margin-top: 10px;
        }

        .goodsimg {
            float: left;
            width: 30%;
            height: 100px;
            text-align: center;
        }

        .goodsInfo {
            float: left;
            width: 70%;
            height: 100px;
            text-align: center;
            line-height: 20px;
        }

        .addBtn {
            float: right;
            margin-right: 20px;
            margin-bottom: 5px;
        }

        .goodstittle {
            font-weight: 700;
        }
    </style>
</head>
<body>
    <div>

        <div id="components-demo">
            <button-counter v-for="item in sites" v-bind:todo="item"></button-counter>
        </div>

    </div>
    <script src="~/Scripts/Vue/vue.min.js"></script>
    <script src="~/Scripts/Vue/vue-resource.js"></script>

    <script  type="text/javascript"> 
        Vue.component('button-counter', {
            props: ['todo'],
            data: function () {
                return {
                    count: 0
                }
            },
            template: '<div class="goodsItem" ><div class="goodsimg"><a href="#"  onclick = "OpenGoodsDetail(todo.Id)"><img v-bind:src=" todo.pic1"  style="height: 80px" alt="暂无图片"></a></div><div class="goodsInfo"><div class="goodstittle"  onclick = "OpenGoodsDetail(todo.Id )">{{todo.GoodsTittle}} </div><div class="info">规格:{{todo.Spec}} </div><div class="info">￥{{todo.RetailtPrice}}</div><div class="addBtn" goodsId =todo.Id><img src="/Content/images/add.png" height="30" width="30"/></div></div></div>'
        })
        var app =  new Vue({
            el: '#components-demo',
            data: {
                sites: []
            },
            methods: {
                get: function () {
                    //发送get请求
                    this.$http.post(
                        '/APP/GetSpecialGoods',
                        { emulateJSON: true }
                    ).then(function (res) {
                        var res = JSON.parse(res.body)
                        if (res.Stutas) {
                            this.sites = res.Result.XinpingList.ListData
                        }
                    }, function () {
                        console.log('请求失败处理');
                    });
                }
            }

        })
        app.get();
    </script>
</body>
</html>
