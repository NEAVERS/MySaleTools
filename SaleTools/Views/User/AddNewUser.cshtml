
@using Model;
@{
    ViewBag.Title = "AddNewUser";
    var typeList = (List<UserType>)ViewBag.TypeList;
    var saleList = (List<UserInfo>)ViewBag.SaleManList;

}
<div class="col_main_hd">
    <h2>
       新增小店用户
    </h2>
</div>
<div class="col_main_bd">
    <div class="inner">
        <div class="col_main_content">

            <table class="table table_border_td_none">
                <tbody>

                    <tr>
                        <td class="right">
                            账号：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="account" id="account" value="">
                        </td>
                    </tr>


                    <tr>
                        <td class="right">
                            密码：
                        </td>
                        <td>
                            <input type="password" class="inputtext" style="width:150px;" name="pws" id="pws" value="">
                        </td>
                    </tr>


                    <tr>
                        <td class="right">
                            重复密码：
                        </td>
                        <td>
                            <input type="password" class="inputtext" style="width:150px;" name="pws2" id="pws2" value="">
                        </td>
                    </tr>

                    <tr>
                        <td class="right">
                            小店编号：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="userNum" id="userNum" value="">
                        </td>
                    </tr>
                    <tr>
                        <td class="right">
                            名字：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="userName" id="userName" value="">
                        </td>
                    </tr>
                    <tr>
                        <td class="right">
                            小店名称：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="storeName" id="storeName" value="">
                        </td>
                    </tr>
                    <tr>
                        <td class="right">
                            手机：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="tel" id="tel" value="">
                        </td>
                    </tr>
                    <tr>
                        <td class="right">
                            邮箱：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="email" id="email" value="">
                        </td>
                    </tr>
                    <tr>
                        <td class="right">
                            区域：
                        </td>
                        <td>
                            <select id="province"></select>
                            <select id="city"></select>
                            <select id="area"></select>
                        </td>
                    </tr>

                    <tr>
                        <td class="right">
                            地址：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="addr" id="addr" value="">
                        </td>
                    </tr>

                    <tr>
                        <td class="right">
                            小店平米数：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="storeArea" id="storeArea" value="">
                        </td>
                    </tr>
                    <tr>
                        <td class="right">
                            送货备注：
                        </td>
                        <td>
                            <input type="text" class="inputtext" style="width:150px;" name="remark" id="remark" value="">
                        </td>
                    </tr>


                    <tr>
                        <td class="right">
                            请选择业务员：
                        </td>
                        <td>
                            <select id="saleMan">
                                <option value="0">请选择业务员</option>
                                @foreach (var item in saleList)
    {
                            <option value="@item.UserId">@item.UserName</option>
}
                            </select>
                        </td>
                    </tr>


                    <tr>
                        <td class="right">
                            用户类型：
                        </td>
                        <td>
                            <select id="userType" class="seller-id">
                                @foreach (var item in typeList)
                {
                    <option value="@item.TypeId">@item.TypeName </option>
}
                            </select>
                        </td>
                    </tr>



                </tbody>
            </table>


        </div>
    </div>
</div>



<button id="btn_add">添加</button>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>

    $(function () {
        $(document).on("change", "#province", function () {
            LoadArea($(this).val(), $("#city"))
        });
        $(document).on("change", "#city", function () {
            LoadArea($(this).val(), $("#area"))
        });
        LoadArea("0", $("#province"))
    })





    function LoadArea(num, obj) {
        $.post("/Common/GetAreaList", { num: num }, function (res) {
            var html = "";
            $(res).each(function () {
                html += '<option value="' + this.Num + '">' + this.Name + '</option>';
            });
            obj.html(html);
            obj.change();
        }, "json");
    }

    $("#btn_add").click(function () {
        AddNewUser();
    });
    function AddNewUser() {
        var userName = $("#userName").val();
        var userNum = $("#userNum").val();
        var account = $("#account").val();
        var pwd = $("#pws").val();
        var typeId = $("#userType").val();
        var typeName = $("#userType").find("option:selected").text();


        if (pwd != $("#pws2").val()) {
            alert("两次密码不一致！");
            return;
        }
        if (userName == "" || userNum == "" || account == "") {
            alert("用户名、账号、用户编号不能为空！");
            return;
        }
        var para = {};
        para.UserName = userName;
        para.UserNum = userNum;
        para.Account = account;
        para.PassWord = pwd;
        para.TypeId = typeId;
        para.TypeName = typeName;
        para.ProvinceNum = $("#province").val();
        para.Province = $("#province").find("option:selected").text();
        para.CityNum = $("#city").val();
        para.City = $("#city").find("option:selected").text();
        para.AreaNum = $("#area").val();
        para.Area = $("#area").find("option:selected").text();
        para.SotreName = $("#storeName").val();
        para.Tel = $("#tel").val();
        para.Email = $("#email").val();
        para.Addr = $("#addr").val();
        para.StoreArea = $("#storeArea").val();
        para.Remark = $("#remark").val();
        para.SaleManGuid = $("#saleMan").val();
        para.SaleManName = $("#saleMan").find("option:selected").text();
        $.post("/User/SaveUser", para, function (e) {
            alert(e);
        }, "json")
    }
</script>
