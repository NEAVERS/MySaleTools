@using Model;
@{
    Layout = null;
}
@model Notice
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NoticeDetail</title>
    <link href="~/Content/css/base.css" rel="stylesheet" />
    <link href="~/Content/css/normalize.css" rel="stylesheet" />
    <link href="~/Content/css/Notice.css" rel="stylesheet" />

</head>
<body>
    <div id="wraper">
        <div class="main" id="main">
            <div class="notice_main">
                <div class="notice_content">
                    <div class="notice_info">
                        <div class="notice_info_show">
                            <h2 class="notice_title">@Model.Tittle</h2>
                            <div class="notice_time_and_readNum">
                                <span>发布时间:<i class="notice_created">@Model.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</i></span>
                            </div>
                            <div class="notice_con">
                                @Model.Content 
                            </div>
                            <!--                        <div class="notice_action">-->
                            <!--                            <a href="/notice">返回公告列表</a>-->
                            <!--                        </div>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div></body>
</html>
