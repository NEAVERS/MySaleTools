@using Model;
@using Common.Entities

    @{
        ViewBag.Title = "AddNewCoupon";
        Layout = "~/Views/Shared/_Layout.cshtml";
        var typeList = (List<UserType>)ViewBag.TypeList;
        var suppliers = (List<Supplier>)ViewBag.Supplier;
        var brandList = (List<GoodsBrand>)ViewBag.BrandList;
    }
    @model ManDetail<DPS>
    <div class="col_main">
        <div class="col_main_hd">
            <h2>编辑单品送</h2>
        </div>
        <div class="col_main_bd">
            <div class="inner">
                <div class="col_main_content">
                    <form action="/Activtity/SaveEdiEditDPS" method="POST" id="J_PublishProductForm">
                        <table class="table table_border_td_none">
                            <tbody>
                                <tr>
                                    <td class="right"><span class="highlight">*</span>活动开始时间：</td>
                                    <td><input type="text" class="inputtext" name="StartTime" style="width:180px;" value="@Model.Info.StartTime.ToString("yyyy-MM-dd HH:mm:ss")" onclick="laydate({format:'YYYY-MM-DD hh:mm:ss', istime:true});"></td>
                                </tr>
                                <tr>
                                    <td class="right"><span class="highlight">*</span>活动结束时间：</td>
                                    <td><input type="text" class="inputtext float" name="EndTime" style="width:180px;" value="@Model.Info.EndTime.ToString("yyyy-MM-dd HH:mm:ss")" onclick="laydate({format:'YYYY-MM-DD hh:mm:ss', istime:true});"></td>
                                </tr>

                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span>区域</td>
                                    <td>
                                        <select id="province"></select>
                                        <select id="city"></select>
                                        <select id="area"></select>
                                        <a id="addarea">添加区域</a>

                                    </td>
                                </tr>
                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span></td>
                                    <td id="selectedArea">

                                        @foreach (var area in Model.areas)
                                        {
                                            <a href="javascript:; " class="btn areaInfo" data-id="@area.Num">@area.Name</a>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span>购买商品编号：</td>
                                    <td>
                                        <input type="text" class="inputtext " name="GoodsNum" id="GoodsNum" style="width:100px;" value="@Model.Info.GoodsNum">
                                        <span class="tip" id="goodsTip">请输入商品编号</span>

                                    </td>
                                </tr>
                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span>购买数量：</td>
                                    <td>
                                        <input type="number" class="inputtext " name="Count" id="Count" style="width:100px;" value="@Model.Info.Count">

                                    </td>
                                </tr>
                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span>赠品Id：</td>
                                    <td>
                                        <input type="text" class="inputtext " name="SendGoodsNum" id="SendGoodsNum" style="width:100px;" value="@Model.Info.SendGoodsNum">
                                        <span class="tip" id="goodsTip">请输入商品编号</span>

                                    </td>
                                </tr>

                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span>赠品数量：</td>
                                    <td>
                                        <input type="number" class="inputtext integral " name="SendCount" style="width:100px;" value="@Model.Info.SendCount">
                                    </td>
                                </tr>

                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span>只送一次：</td>
                                    <td>
                                        <input type="radio" name="IsOnly" value="true" @(Model.Info.IsOnly ? "checked='checked'" : "") />是<input type="radio" name="IsOnly" @(Model.Info.IsOnly ? "":"checked='checked'") value="false" />否
                                    </td>
                                </tr>

                                <tr>
                                    <td class="right" width="120"><span class="highlight">*</span>上不封顶：</td>
                                    <td>
                                        <input type="radio" name="IsRepeat" value="true" @(Model.Info.IsRepeat ? "checked='checked'" : "") />是<input type="radio" name="IsRepeat" @(Model.Info.IsRepeat ?  "":"checked='checked'" ) value="false" />否
                                    </td>
                                </tr>
                                <tr id="more">
                                    <td class="right"><span class="highlight">*</span>店铺类型:</td>
                                    <td>
                                        @foreach (var item in typeList)
                                        {
                                            <input type="checkbox" name="userType" value="@item.TypeId" @(Model.Info.UserTypes.Split(',').Contains(item.TypeId.ToString()) ? "checked='checked'" : "")>@item.TypeName
                                        }
                                        &nbsp; &nbsp;
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <button type="submit" class="btn btn_confirm" style="margin-left:180px;">保存</button>
                        <input type="hidden" name="Id" id="Id" value="@Model.Info.Id" />
                        <input type="hidden" name="areaNums" id="areaNums" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="AreaStr" value="@ViewBag.AreaStr" />
    <script src="~/Scripts/layer/layer.js"></script>
    <script>
        var AreaList = [];

        $(function () {
            AreaList = $("#AreaStr").val().split(",");

            $(document).on("change", "#province", function () {
                LoadArea($(this).val(), $("#city"))
            });
            $(document).on("change", "#city", function () {
                LoadArea($(this).val(), $("#area"))
            });
            LoadArea("0", $("#province"))
            IniArea();

        })

        $("#addarea").click(function () {
            var area = $("#area").val() + "_" + $("#area").find("option:selected").text();
            if (AreaList.indexOf(area) > -1) {
                layer.msg("该区域已经存在！请勿重复添加！", { icon: 2 });
                return;
            }
            AreaList.push(area);
            IniArea();
        });

        function IniArea() {
            var html = "";
            var areaNums = "";
            $(AreaList).each(function () {
                var areaInfo = this.split("_");
                html += '<a href="javascript:; " class="btn areaInfo" data-id="' + this + '">' + areaInfo[1] + '</a>';
                areaNums += areaInfo[0] + ",";
            })
            $("#selectedArea").html(html);
            $("#areaNums").val(areaNums);

        }
        Array.prototype.removeByValue = function (val) {
            for (var i = 0; i < this.length; i++) {
                if (this[i] == val) {
                    this.splice(i, 1);
                    break;
                }
            }
        }
        $(document).on("click", ".areaInfo", function () {
            var areaInfo = $(this).data("id");
            layer.confirm('确认要删除该区域吗？', {
                btn: ['确定', '取消']//按钮
            }, function (index) {
                layer.close(index);
                AreaList.removeByValue(areaInfo);
                IniArea();
            });


        });



        function LoadArea(num, obj) {
            $.post("/Common/GetAreaList", { num: num }, function (res) {
                var html = "";
                $(res).each(function () {
                    html += '<option value="' + this.Num + '">' + this.Name + '</option>';
                });
                obj.html(html);
                obj.change();
            }, "json");
        }


        $("#SupplierId").change(function () {
            var name = $("#SupplierId").find("option:selected").text();
            $("#SupplierName").val(name);
        });
        $("#BrandId").change(function () {
            var name = $("#BrandId").find("option:selected").text();
            $("#BrandName").val(name);

        })

        $("#addtype").change(function () {
            var id = $(this).val();
            if (id == 0) {
                $("#only").show();
                $("#more").hide();
            }
            else {
                $("#only").hide();
                $("#more").show();
            }
        })

        $("#CouponType").change(function () {
            var type = $(this).val();
            if (type == 1) {
                $("#supplier").hide();
                $("#BrandId").hide();
            }
            if (type == 2) {
                $("#supplier").hide();
                $("#BrandId").show();
            }

            if (type == 3) {
                $("#supplier").show();
                $("#BrandId").hide();
            }

        });
        $("#SendGoodNum").blur(function () {
            var num = $(this).val();
            $.post("/Activtity/CheckGoods", { num: num }, function (e) {
                if (e.Stutas) {
                    $("#SendGoodId").val(e.Result.Id)
                    $("#SendGoodName").val(e.Result.GoodsTittle)
                    $("#goodsTip").html(e.Result.GoodsTittle);
                }
                else {
                    $("#SendGoodId").val("")
                    $("#SendGoodName").val("")
                    $("#goodsTip").html("商品编号有误，请重新输入！");

                }
            }, "json");
        });

    </script>