@using Model;
@using Common.Entities;
@{
    ViewBag.Title = "AddNewCoupon";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var typeList = (List<UserType>)ViewBag.TypeList;
    var suppliers = (List<Supplier>)ViewBag.Supplier;
    var brandList = (List<GoodsBrand>)ViewBag.BrandList;
}
@model ManDetail<Manjiusong>
<div class="col_main">
    <div class="col_main_hd">
        <h2>新增优惠券</h2>
    </div>
    <div class="col_main_bd">
        <div class="inner">
            <div class="col_main_content">
                <form action="/Activtity/SaveEditManSong" method="POST" id="J_PublishProductForm">
                    <table class="table table_border_td_none">
                        <tbody>

                            <tr>
                                <td class="right"><span class="highlight">*</span>优惠卷类型:</td>
                                <td>
                                    <select id="CouponType" name="TypeId">
                                        <option value="1" @(Model.Info.TypeId == 1 ? "selected='selected'" : "")>通用满就送</option>
                                        <option value="2" @(Model.Info.TypeId == 2 ? "selected='selected'" : "")>品牌满就送</option>
                                        <option value="3" @(Model.Info.TypeId == 3 ? "selected='selected'" : "")>供应商满就送</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td class="right" width="120"><span class="highlight">*</span>活动标题：</td>
                                <td>
                                    <input type="text" class="inputtext " name="Tittle" style="width:100px;" value="@Model.Info.Tittle">
                                </td>
                            </tr>

                            <tr id="supplier" style="display:none">
                                <td class="right" width="120"><span class="highlight">*</span>供应商：</td>
                                <td>
                                    <select name="SupplierId" id="SupplierId" style="width:100px;">
                                        @foreach (var item in suppliers)
                        {
                            <option value="@item.Id" @(Model.Info.SupplierId == item.Id ? "selected='selected'" : "")> @item.SupplierCompany</option>
        }
                                    </select>

                                </td>
                            </tr>

                            <tr id="BrandId" style="display:none">
                                <td class="right" width="120"><span class="highlight">*</span>品牌：</td>
                                <td>
                                    <select name="BrandId" id="BrandId" style="width:100px;">
                                        @foreach (var item in brandList)
                        {
                            <option value="@item.Id" @(Model.Info.BrandId == item.Id ? "selected='selected'" : "")> @item.BrandName</option>
        }
                                    </select>

                                </td>
                            </tr>

                            <tr>
                                <td class="right"><span class="highlight">*</span>活动开始时间：</td>
                                <td><input type="text" class="inputtext" name="StartTime" style="width:180px;" value="@Model.Info.StartTime" onclick="laydate({format:'YYYY-MM-DD hh:mm:ss', istime:true});"></td>
                            </tr>
                            <tr>
                                <td class="right"><span class="highlight">*</span>活动结束时间：</td>
                                <td><input type="text" class="inputtext float" name="EndTime" style="width:180px;" value="@Model.Info.EndTime" onclick="laydate({format:'YYYY-MM-DD hh:mm:ss', istime:true});"></td>
                            </tr>
                            <tr>
                                <td class="right" width="120"><span class="highlight">*</span>使用满足条件：</td>
                                <td>
                                    <input type="text" class="inputtext float" name="LimitMoney" style="width:100px;" value="@Model.Info.LimitMoney">
                                    <span class="tip">满足多少金额才能使用此优惠券</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="right" width="120"><span class="highlight">*</span>区域</td>
                                <td>
                                    <select id="province"></select>
                                    <select id="city"></select>
                                    <select id="area"></select>
                                    <a id="addarea">添加区域</a>

                                </td>
                            </tr>
                            <tr>
                                <td class="right" width="120"><span class="highlight">*</span></td>
                                <td id="selectedArea">
                                    @foreach (var area in Model.areas)
                    {
                        <a href="javascript:; " class="btn areaInfo" data-id="@area.Num">@area.Name</a>
    }
                                </td>
                            </tr>
                            <tr>
                                <td class="right" width="120"><span class="highlight">*</span>赠品Id：</td>
                                <td>
                                    <input type="text" class="inputtext " name="SendGoodNum" style="width:100px;" value="@Model.Info.SendGoodNum">
                                    <span class="tip" id="goodsTip">@Model.Info.SendGoodName</span>

                                </td>
                            </tr>
                            <tr>
                                <td class="right" width="120"><span class="highlight">*</span>赠品数量：</td>
                                <td>
                                    <input type="text" class="inputtext integral " name="SendGoodCount" style="width:100px;" value="@Model.Info.SendGoodCount">
                                </td>
                            </tr>

                            <tr id="more">
                                <td class="right"><span class="highlight">*</span>店铺类型:</td>
                                <td>
                                    @foreach (var item in typeList)
                    {
                        <input type="checkbox" name="userType" value="@item.TypeId" @(Model.Info.UserTypes.Split(',').Contains(item.TypeId.ToString()) ? "checked='checked'" : "")>@item.TypeName
    }
                                    &nbsp; &nbsp;
                                </td>
                            </tr>

                        </tbody>
                    </table>
                    <button type="submit" class="btn btn_confirm" style="margin-left:180px;">保存</button>
                    <input type="hidden" name="BrandName" id="BrandName" value="@Model.Info.BrandName" />
                    <input type="hidden" name="SupplierName" id="SupplierName" value="@Model.Info.SupplierName" />
                    <input type="hidden" name="areaNums" id="areaNums" />
                    <input type="hidden" name="SendGoodId" id="SendGoodId" value="@Model.Info.SendGoodId" />
                    <input type="hidden" name="SendGoodName" id="SendGoodName" value="@Model.Info.SendGoodName" />
                    <input type="hidden" name="Id" id="Id" value="@Model.Info.Id" />
                </form>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="AreaStr" value="@ViewBag.AreaStr" />
<script src="~/Scripts/layer/layer.js"></script>
<script>
    var AreaList = [];

    $(function () {
        AreaList = $("#AreaStr").val().split(",");
        $(document).on("change", "#province", function () {
            LoadArea($(this).val(), $("#city"))
        });
        $(document).on("change", "#city", function () {
            LoadArea($(this).val(), $("#area"))
        });
        LoadArea("0", $("#province"))
        IniArea();
    })

    $("#addarea").click(function () {
        var area = $("#area").val() + "_" + $("#area").find("option:selected").text();
        if (AreaList.indexOf(area) > -1) {
            layer.msg("该区域已经存在！请勿重复添加！", { icon: 2 });
            return;
        }
        AreaList.push(area);
        IniArea();
    });

    function IniArea() {
        var html = "";
        var areaNums = "";
        $(AreaList).each(function () {
            var areaInfo = this.split("_");
            html += '<a href="javascript:; " class="btn areaInfo" data-id="' + this + '">' + areaInfo[1] + '</a>';
            areaNums += areaInfo[0] + ",";
        })
        $("#selectedArea").html(html);
        $("#areaNums").val(areaNums);

    }
    Array.prototype.removeByValue = function (val) {
        for (var i = 0; i < this.length; i++) {
            if (this[i] == val) {
                this.splice(i, 1);
                break;
            }
        }
    }
    $(document).on("click", ".areaInfo", function () {
        var areaInfo = $(this).data("id");
            layer.confirm('确认要删除该区域吗？', {
                btn: ['确定', '取消']//按钮
            }, function (index) {
                layer.close(index);
                AreaList.removeByValue(areaInfo);
                IniArea();
            });


    });



    function LoadArea(num, obj) {
        $.post("/Common/GetAreaList", { num: num }, function (res) {
            var html = "";
            $(res).each(function () {
                html += '<option value="' + this.Num + '">' + this.Name + '</option>';
            });
            obj.html(html);
            obj.change();
        }, "json");
    }


    $("#SupplierId").change(function () {
        var name = $("#SupplierId").find("option:selected").text();
        $("#SupplierName").val(name);
    });
    $("#BrandId").change(function () {
        var name = $("#BrandId").find("option:selected").text();
        $("#BrandName").val(name);

    })

    $("#addtype").change(function () {
        var id = $(this).val();
        if (id == 0) {
            $("#only").show();
            $("#more").hide();
        }
        else {
            $("#only").hide();
            $("#more").show();
        }
    })

    $("#CouponType").change(function () {
        var type = $(this).val();
        if (type == 1) {
            $("#supplier").hide();
            $("#BrandId").hide();
        }
        if (type == 2) {
            $("#supplier").hide();
            $("#BrandId").show();
        }

        if (type == 3) {
            $("#supplier").show();
            $("#BrandId").hide();
        }

    });
    $("#SendGoodNum").blur(function () {
        var num = $(this).val();
        $.post("/Activtity/CheckGoods", { num: num }, function (e) {
            if (e.Stutas) {
                $("#SendGoodId").val(e.Result.Id)
                $("#SendGoodName").val(e.Result.GoodsTittle)
                $("#goodsTip").html(e.Result.GoodsTittle);
            }
            else {
                $("#SendGoodId").val("")
                $("#SendGoodName").val("")
                $("#goodsTip").html("商品编号有误，请重新输入！");

            }
        }, "json");
    });

</script>